@model Note

<div class="container shadow p-5">
    <div class="row pb-2">
        <h2>Delete Note</h2>
    </div>

    <form method="post" asp-action="DeleteNote">
        <input asp-for="Id" hidden />
        <div asp-validation-summary="All"></div>

        <div class="form-row">
            <div class="form-group col-md-6">
                <label asp-for="Title">Title</label>
                <input type="text" class="form-control mb-3" asp-for="Title" placeholder="Enter Title" disabled>
                <span asp-validation-for="Title" class=" alert-danger"></span>
            </div>
            <div class="form-group col-md-6">
                <label asp-for="Description">Description</label>
                <input type="text" class="form-control mb-3" asp-for="Description" placeholder="Description" disabled>
                <span asp-validation-for="Description" class=" alert-danger"></span>
            </div>
        </div>

        <div class="form-row">
            <div class="form-group col-md-6 mb-3">
                <label asp-for="CreatedDate">CreatedDate At</label>
                <input type="datetime-local" class="form-control" asp-for="CreatedDate" disabled>
                <span asp-validation-for="CreatedDate" class=" alert-danger"></span>
            </div>
        </div>


        <button type="submit" class="btn btn-lg btn-danger p-2"><i class="bi bi-trash-fill"></i>Delete</button>
        <a asp-controller="NoteBook" asp-action="Index" class="btn btn-lg btn-warning p-2">Show All Notes</a>
    </form>

</div>


@*//for front end validations*@

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}